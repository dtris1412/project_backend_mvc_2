<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Home</title>
</head>
<style>
    .title {
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
    }

    .table_container {
        padding: 15px 20px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #ccc;
    }
</style>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="/create">Create User</a>

    </div>
    <div class="table_container">
        <div class="title">List User</div>
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
            <% listUsers.forEach(function(user, index){%>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.email%>
                    </td>
                    <td>
                        <%= user.name%>
                    </td>
                    <td>
                        <%= user.city%>
                    </td>
                    <td>
                        <a href="/update/<%= user.id %>">Edit</a>
                        <form action="/delete_user/<%= user.id %> " method="post">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
                <%})%>
        </table>
    </div>
</body>

</html>